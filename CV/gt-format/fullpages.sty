\newdimen\@tempdim
\newdimen\staplewidth \staplewidth = 0.0in  % Extra space for staples.
\newif\if@stapled \@stapledfalse  % To prevent reducing width twice
\newcommand\stapled{\if@stapled\else\@stapledtrue
  \global\staplewidth=0.5in
  \@tempdim = \textwidth \advance\@tempdim -0.5\staplewidth
  \resetwidth{\@tempdim}\fi }
\newlength{\lpaperwidth} \setlength{\lpaperwidth}{8.5in}
\newcommand\resetwidth[1]{\global\textwidth=#1
 \global\hsize=\textwidth
 \setlength{\linewidth}{\textwidth}
 \@tempdim=\lpaperwidth
 \advance\@tempdim by -\textwidth
 \advance\@tempdim by -\staplewidth  % Don't count staple in available space
 \divide\@tempdim by 2
 \global\oddsidemargin=\@tempdim
 \global\advance\oddsidemargin by -1.0in % Remove built-in margin
 \global\advance\oddsidemargin by \staplewidth  % Shift by staple width
 \global\evensidemargin=\oddsidemargin
 \if@twoside
  \global\advance\evensidemargin by -2\staplewidth
 \fi
 \global\marginparwidth = \@tempdim  % This is too small if text is wide!
 \global\advance\marginparwidth by -\marginparsep % Space from text
 \global\advance\marginparwidth by -0.5in % Space left to edge of paper
 }
\newlength{\lpaperheight} \setlength{\lpaperheight}{11in}
\newcommand\resetheight[1]{\global\textheight=#1
 \global\vsize=\textheight 
 \global\@colht=\textheight  \global\@colroom=\textheight
 \@tempdim=\lpaperheight
 \advance\@tempdim by -\textheight
 \advance\@tempdim by -\headheight
 \advance\@tempdim by -\headsep
 \divide\@tempdim by 2
 \global\topmargin = \@tempdim
 \global\advance\topmargin by -1.0in  % Remove built-in margin
 \global\advance\topmargin by -\headheight % Push heading INTO margin
 }
