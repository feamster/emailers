\usepackage{ifthen}

\def\marginnote#1#2{{\it[#1:#2]\marginpar{\tiny{#1}}}}
\def\markit#1{{\textcolor[rgb]{1.00,0.00,0.00}{#1}}}

\ifthenelse{\equal{\version}{internal}} {
    \newcommand{\acceptance}[1]{{\small\sl [#1]}}
    \newcommand{\percent}[1]{{\marginpar{\small\textbf{[#1]}}}}
    \newcommand{\contribution}[1]{{\small\sl [#1]}}
    \newcommand{\note}[1]{\marginnote{*}{{\small #1}}}
    \def\footernoteA{Curriculum Vitae -- Complete}
    \def\footernoteB{Curriculum Vitae -- Complete}
    \typeout{************* Version: GT Internal}
    \newcommand{\internalonly}[1]{#1}
    \newcommand{\internalnote}[1]{#1}
    } {}


\ifthenelse{\equal{\version}{external}} {
    \newcommand{\acceptance}[1]{}
    \newcommand{\percent}[1]{}
    \newcommand{\contribution}[1]{}
    \newcommand{\note}[1]{\marginnote{*}{{\small #1}}}
    \def\footernoteA{Revised: \today}
    \def\footernoteB{Curriculum Vitae -- External}
    \typeout{************* Version: External}
    \newcommand{\internalonly}[1]{}
    \newcommand{\internalnote}[1]{{\it Removed for external version.}}
    } {}
\ifthenelse{\equal{\mode}{draft}} {
    \newcommand {\ienote}[1]{\marginnote{IE}{\textbf{\textcolor[rgb]{1.00,0.00,0.00}{#1}}}}
    \typeout{************* MODE: Draft}
    } {}

\ifthenelse{\equal{\mode}{final}} {
    \newcommand{\ienote}[1]{}
    \typeout{************* MODE: Final}
    } {}



\newcommand{\request}[1]{{\it Available upon request.}}


